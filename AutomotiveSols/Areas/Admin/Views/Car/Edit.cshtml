@model AutomotiveSols.CarViewModel

@{
    ViewData["Title"] = "Edit";
}


<h4>Edit Your @Model.Car.Brand.Name Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Car.Id" />

            <div class="form-group">
                <label asp-for="@Model.Car.Price" class="control-label"></label>
                <input asp-for="@Model.Car.Price" class="form-control" />
                <span asp-validation-for="@Model.Car.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Car.MainImage" class="control-label"></label>
                <div class="col-3">
                    <img src="@Model.Car.MainImage" width="100" style="border-radius:5px; border:1px solid #bbb9b9;" />
                </div>
                <span asp-validation-for="@Model.Car.MainImage" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Car.MainImage"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    Transmission
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Car.TransmissionId, Model.TransmissionList, "-Select a Transmission",
                   new { @class = "form-control" })
                    <span asp-validation-for="Car.TransmissionId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    Brand
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Car.BranId, Model.BrandList, "-Select a Brand",
                   new { @class = "form-control" })
                    <span asp-validation-for="Car.BranId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Mileage
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(m => m.Car.MileageId, Model.MileageList, "-Select a Mileage",
                       new { @class = "form-control" })
                        <span asp-validation-for="Car.MileageId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Model
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(m => m.Car.ModelId, Model.ModelList, "-Select a Model",
                       new { @class = "form-control" })
                        <span asp-validation-for="Car.ModelId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        REgistration
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(m => m.Car.RegistrationCityId, Model.RegistrationCityList, "-Select a Registrayion City",
                       new { @class = "form-control" })
                        <span asp-validation-for="Car.RegistrationCityId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Trim
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(m => m.Car.TrimId, Model.TrimList, "-Select a Trim",
                       new { @class = "form-control" })
                        <span asp-validation-for="Car.TrimId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Year
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(m => m.Car.YearId, Model.YearList, "-Select a Year",
                       new { @class = "form-control" })
                        <span asp-validation-for="Car.YearId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    @for (int i = 0; i < Model.FeatureAssignedToCar.Count; i++)
                    {
                        @Html.HiddenFor(m => Model.FeatureAssignedToCar[i].FeatureId)
                        @Html.CheckBoxFor(m => Model.FeatureAssignedToCar[i].Assigned)
                        <label>@Model.FeatureAssignedToCar[i].FeatureName</label>
                    }
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

