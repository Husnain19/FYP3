@model IEnumerable<AutomotiveSols.BLL.Models.SubCategory>

@{ ViewData["Title"] = "SubCategory";

}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Sub Categories</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Sub Category</a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                Category Name
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Category.Name)
                </td>

                <td>
                    <partial name="_ButtonsPartial" model="@item.Id" />

                </td>

            </tr>
        }
    </table>
</div>





