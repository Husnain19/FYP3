@model IEnumerable<AutomotiveSols.BLL.Models.Category>
@{
    ViewData["Title"] = "Category";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-success">Category List</h2>
    </div>

    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-primary">&nbsp; New Category</a>
    </div>
</div>


<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    <partial name="_ButtonsPartial" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
</div>

