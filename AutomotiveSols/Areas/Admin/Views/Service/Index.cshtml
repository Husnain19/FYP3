@model IEnumerable<AutomotiveSols.BLL.Models.Services>
@{ ViewData["Title"] = "Index"; }

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Services List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Service </a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.ServiceType)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(m => item.Name)
    </td>
    <td>
        @String.Format("{0:c}", item.Price)
    </td>
     <td>
        @Html.DisplayFor(m => item.ServiceType.Name)
    </td>
    
     <td>
         <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
         <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
         <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
     </td>
</tr>}
    </table>
</div>

