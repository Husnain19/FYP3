@model AutomotiveSols.BLL.ViewModels.ServiceVM



<br />
<h2 class="text-info">Delete Service</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Services.Id" />
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Services.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Services.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Services.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Services.Price" class="form-control" />
                </div>
                <span asp-validation-for="Services.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Service Type</label>
                <select asp-for="Services.ServiceTypeId" class="form-control" asp-items="ViewBag.ServiceTypes">
                    <option value="">Please choose your Type of Service</option>
                </select>
                <span asp-validation-for="Services.ServiceTypeId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Services.Description"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Services.Description" class="form-control" />
                </div>
                <span asp-validation-for="Services.Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Services.SellerComments"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Services.SellerComments" class="form-control" />
                </div>
                <span asp-validation-for="Services.SellerComments" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Services.ImageUrl"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" class="form-control" />
                </div>
            </div>
            <div class="col-1">

            </div>
            <div class="col-3">
                <img src="@Model.Services.ImageUrl" width="100" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>


            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
        </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

