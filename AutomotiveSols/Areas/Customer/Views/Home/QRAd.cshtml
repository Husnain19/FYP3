@model AutomotiveSols.BLL.Models.QR

@{
    ViewData["Title"] = "QRAd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="cover">
    <div id="cover-caption">
        <div id="container" class="container">
            <div class="row">
                <div class="col-sm-10 offset-sm-1 text-center">
                    <h1 class="display-3">Welcome to Automotive Solutions Cars Ads</h1>

                    <div class="form-group">
                        <label class="sr-only">Scan QR Code</label>
                        <img height="400" width="400" src="@Model.QRCode" style="border:1px solid black;"/>
                    </div>
                    <div class="info-form">
                        <form class="form-inline justify-content-center" method="get" asp-area="Admin" asp-controller="Payment" asp-action="Create">

                            <button type="submit" class="btn btn-success ">Continue!</button>
                        </form>
                    </div>
                    <br>


                </div>
            </div>
        </div>
    </div>
</section>
